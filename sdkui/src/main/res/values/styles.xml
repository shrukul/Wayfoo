<resources>
    <!-- Base application theme. -->
    <style name="MyPayUTheme" parent="MyPayUTheme.Base">
        <item name="android:buttonStyle">@style/MyPayUTheme.Button</item>
    </style>

    <style name="MyPayUTheme.Toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#9929303f</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyPayUTheme.Button" parent="android:Widget.Button">
        <item name="android:textColor">#9929303f</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">sans-serif-normal</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:drawableRight">@drawable/ic_keyboard_arrow_right_black_24dp</item>
    </style>

    <style name="MyPayUTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#ff1b202a</item>
        <item name="colorAccent">#ff0bc6a0</item>
    </style>
</resources>
